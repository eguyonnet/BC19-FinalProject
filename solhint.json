{
  "extends": "default",
  "rules": {
    "indent": ["error", 4],

    "bracket-align": false,
    "compiler-fixed": false,
    "two-lines-top-level-separator": false,

    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "error",
    "reentrancy": "error",
    "func-visibility" : "error",
    "state-visibility" : "error",
    "avoid-tx-origin": "error"
  }
}